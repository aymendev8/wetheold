{% extends 'base.html.twig' %}

{% block title %}wetheold - Connexion {% endblock %}

{% block body %}
    <div class="container">
       <h1 class="mt-4"> Espace client </h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% if error %}

            <div class="alert alert-dismissible alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>

        {% endif %}

        <form action="{{ path('security.login') }}" method="post">
            <div class="form-group">
                <label for="username" class="form-label mt-4">Adresse email</label>
                <input type="email" class="form-control" id="username" name="_username" aria-describedby="emailHelp" placeholder="mail@wetheold.com" value="{{ last_username }}">
            </div>
            <div class="form-group">
                    <label for="password" class="form-label mt-4">Mot de passe </label>
                <input type="password" class="form-control" id="password" name="_password" placeholder="********">
                <p> Nouveau client?<a href="{{ path('security.register') }}" style="text-decoration: none"> S'inscrire --></a></p>
            </div>
            <button type="submit" class="btn btn-primary mt-4">Se connecter</button>
        </form>
    </div>
{% endblock %}
